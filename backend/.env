# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/smart_mirror_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Kling AI API Configuration
KLING_API_BASE_URL=https://api.klingai.com
KLING_API_ACCESS_KEY=your_access_key_here
KLING_API_SECRET_KEY=your_secret_key_here

# Virtual Try-on Configuration
VIRTUAL_TRYON_MODEL=kling-v1-5  # Using latest V1.5 model for better try-on results
VIRTUAL_TRYON_MODE=pro  # Using pro mode for higher quality

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png

# API Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Model Paths
MODEL_PATH=ai-model/deepfashion_model.h5

# Cache Configuration
CACHE_EXPIRY=3600  # 1 hour in seconds